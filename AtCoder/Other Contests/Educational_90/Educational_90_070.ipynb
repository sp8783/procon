   "source": [
    "import statistics\n",
    "\n",
    "N = int(input())\n",
    "X = []\n",
    "Y = []\n",
    "for _ in range(N):\n",
    "    x, y = map(int, input().split())\n",
    "    X.append(x)\n",
    "    Y.append(y)\n",
    "    \n",
    "xm = statistics.median_low(X)\n",
    "ym = statistics.median_low(Y)\n",
    "\n",
    "ans = 0\n",
    "for x, y in zip(X,Y):\n",
    "    ans += abs(x-xm) + abs(y-ym)\n",
    "print(ans)"
   ]
  }
